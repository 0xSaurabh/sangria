{
  "compilerOptions": {
    "noFallthroughCasesInSwitch": true,
    "target": "es5",
    "module": "esnext",
    "lib": ["DOM"],
    "allowJs": true,
    "jsx": "react",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src"]
}
